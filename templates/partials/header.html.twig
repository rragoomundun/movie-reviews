<header>
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <a class="navbar-brand" href="{{ path('home') }}">Movie Reviews</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <form class="search d-flex rounded" role="search" action="{{ path('search.index') }}" method="GET">
          <input name="query" class="form-control" type="search" placeholder="Search for movies..." aria-label="Search">
          <button class="btn" type="submit">
            <span class="fa-solid fa-magnifying-glass"></span>
          </button>
        </form>
        <ul class="navbar-nav ms-auto">
          {% if app.user %}
            {% if is_granted('ROLE_TEAM') %}
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  <span class="fa-solid fa-plus"></span> Add
                </a>
                <ul class="dropdown-menu">
                  <li><a class="dropdown-item" href="{{ path('movie.add') }}">Movie</a></li>
                  <li><a class="dropdown-item" href="{{ path('person.add') }}">Person</a></li>
                </ul>
              </li>
            {% endif %}

            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <span class="fa-regular fa-circle-user"></span> My Account
              </a>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="{{ path('settings.index') }}">Settings</a></li>
                <li><a class="dropdown-item" href="{{ path('security.logout') }}">Logout</a></li>
              </ul>
            </li>
          {% else %}
            <li class="nav-item">
              <a class="nav-link" href="{{ path('security.login') }}">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="{{ path('registration.register') }}">Register</a>
            </li>
          {% endif %}
        </ul>
      </div>
    </div>
  </nav>
</header>